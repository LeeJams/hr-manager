{
  "expo": {
    "name": "Techmeet HR Manager",
    "slug": "techmeet-hr-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.techmeet.hr-manager",
      "usesAppleSignIn": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.techmeet.hr_manager",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-apple-authentication",
      [
        "@react-native-seoul/kakao-login",
        {
          "nativeAppKey": "YOUR_KAKAO_NATIVE_APP_KEY",
          "overrideKakaoSDKVersion": "2.11.0"
        }
      ]
    ],
    "scheme": "techmeet-hr-manager"
  }
}
