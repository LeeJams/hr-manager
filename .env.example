# ===========================================
# Environment Configuration Template
# ===========================================
# Copy this file to .env.local for development
# or .env.production for production deployment

# Environment
NEXT_PUBLIC_APP_ENV=development  # development | production

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api

# Kakao OAuth
NEXT_PUBLIC_KAKAO_REDIRECT_URI=http://localhost:3000/oauth
NEXT_PUBLIC_KAKAO_REST_API_KEY=YOUR_KAKAO_REST_API_KEY

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID

# Apple OAuth
NEXT_PUBLIC_APPLE_CLIENT_ID=YOUR_APPLE_CLIENT_ID

# Deployment Configuration (Blue-Green)
DEPLOYMENT_ENV=blue  # blue | green

# Server Configuration
PORT=3000